        <!--            <version>2.46.4-SNAPSHOT</version>-->
        <!--        </dependency>-->

        <dependency>
            <groupId>org.mongodb</groupId>
            <artifactId>mongo-java-driver</artifactId>
            <version>3.12.12</version>
        </dependency>

    </dependencies>

</project>